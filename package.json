{
	"name": "hanabi-cli",
	"description": "A command line interface to chat with any AI models, with MCP support.",
	"version": "1.3.0",
	"scripts": {
		"build:main": "tsc",
		"build:ui": "cd ui && next build",
		"postbuild:ui": "cross-env cp -R ./ui/public ./dist/public",
		"prebuild": "rimraf dist",
		"build": "pnpm build:main && pnpm build:ui",
		"prepublishOnly": "pnpm build",
		"start": "tsx src/cli.tsx --dev",
		"add:ui": "cd ui && pnpm dlx shadcn@latest add",
		"lint": "xo",
		"test": "ava"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cashsun/hanabi.git"
	},
	"keywords": [
		"cli",
		"ai",
		"chat",
		"command-line",
		"mcp",
		"llm"
	],
	"bin": {
		"hanabi": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=20.10.0 || >=22",
		"pnpm": ">=9.0.0"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@ai-sdk/anthropic": "1.2.10",
		"@ai-sdk/azure": "1.3.19",
		"@ai-sdk/deepseek": "0.2.13",
		"@ai-sdk/google": "1.2.13",
		"@ai-sdk/groq": "1.2.8",
		"@ai-sdk/openai": "1.3.17",
		"@ai-sdk/openai-compatible": "0.2.13",
		"@ai-sdk/react": "1.2.11",
		"@ai-sdk/xai": "1.2.15",
		"@inkjs/ui": "2.0.0",
		"@inkkit/ink-markdown": "1.0.0",
		"@modelcontextprotocol/sdk": "1.10.2",
		"@radix-ui/react-slot": "1.2.0",
		"@radix-ui/react-tooltip": "1.2.4",
		"@tanstack/react-query": "5.74.4",
		"ai": "4.3.13",
		"class-variance-authority": "^0.7.1",
		"clipboardy": "4.0.0",
		"clsx": "^2.1.1",
		"dedent": "1.5.3",
		"dotenv": "16.5.0",
		"github-markdown-css": "5.8.1",
		"globby": "14.1.0",
		"ink": "^5.2.0",
		"ink-spinner": "5.0.0",
		"lodash-es": "4.17.21",
		"lucide-react": "^0.507.0",
		"meow": "^11.0.0",
		"mime-types": "3.0.1",
		"motion": "12.9.7",
		"next": "15.3.2",
		"ollama-ai-provider": "1.2.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-markdown": "10.1.0",
		"react-syntax-highlighter": "15.6.1",
		"uuid": "11.1.0",
		"zustand": "5.0.3"
	},
	"devDependencies": {
		"@ava/typescript": "5.0.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@tailwindcss/postcss": "^4",
		"@types/lodash-es": "4.17.12",
		"@types/mime-types": "2.1.4",
		"@types/node": "^20",
		"@types/react": "^18.0.32",
		"@types/react-dom": "^18",
		"@types/react-syntax-highlighter": "15.5.13",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.2.0",
		"chalk": "^5.2.0",
		"cross-env": "7.0.3",
		"eslint": "8.39.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-unicorn": "53.0.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"rimraf": "6.0.1",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4",
		"tsx": "4.19.3",
		"tw-animate-css": "^1.2.9",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"ts",
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			},
			"compile": "tsc"
		}
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"ignores": [
			"src/lib/streamableHttpTransport.ts",
			"ui",
			"dist"
		],
		"rules": {
			"react/prop-types": "off",
			"@typescript-eslint/naming-convention": "off",
			"unicorn/filename-case": "off",
			"n/prefer-global/process": "off",
			"unicorn/no-process-exit": "off",
			"capitalized-comments": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"@typescript-eslint/prefer-nullish-coalescing": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"no-await-in-loop": "off",
			"unicorn/prefer-switch": "off",
			"unicorn/prevent-abbreviations": "off",
			"@typescript-eslint/padding-line-between-statements": "off",
			"unicorn/switch-case-braces": "off",
			"react/function-component-definition": "off",
			"no-implicit-coercion": "off",
			"unicorn/explicit-length-check": "off",
			"@typescript-eslint/no-empty-function": "off",
			"react/prefer-read-only-props": "off",
			"no-negated-condition": "off",
			"react/jsx-sort-props": "off",
			"prefer-destructuring": "off",
			"import/order": "off",
			"unicorn/prefer-node-protocol": "off",
			"react/no-unescaped-entities": "off",
			"@typescript-eslint/consistent-type-definitions": "off",
			"@typescript-eslint/array-type": "off",
			"@typescript-eslint/consistent-type-assertions": "off",
			"unicorn/no-lonely-if": "off",
			"no-lonely-if": "off",
			"unicorn/template-indent": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"import/no-named-as-default": "off",
			"react/no-array-index-key": "off",
			"no-undef-init": "off",
			"unicorn/no-console-spaces": "off",
			"unicorn/error-message": "off",
			"@typescript-eslint/no-confusing-void-expression": "off",
			"unicorn/expiring-todo-comments": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/promise-function-async": "off",
			"unicorn/no-array-for-each": "off",
			"unicorn/no-array-reduce": "off",
			"import/no-named-as-default-member": "off",
			"no-eval": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
