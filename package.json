{
	"name": "hanabi-cli",
	"description": "A command line interface to chat with any AI models, with MCP support.",
	"version": "0.6.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cashsun/hanabi.git"
	},
	"keywords": [
		"cli",
		"ai",
		"chat",
		"command-line",
		"mcp",
		"llm"
	],
	"bin": {
		"hanabi": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=20.10.0 || >=22",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "npm run build",
		"dev": "tsc --watch",
		"start": "tsx src/cli.tsx",
		"link-bin": "npm i -g --force .",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@ai-sdk/anthropic": "1.2.10",
		"@ai-sdk/azure": "1.3.19",
		"@ai-sdk/deepseek": "0.2.13",
		"@ai-sdk/google": "1.2.13",
		"@ai-sdk/openai": "1.3.17",
		"@ai-sdk/openai-compatible": "0.2.13",
		"@inkjs/ui": "2.0.0",
		"@inkkit/ink-markdown": "1.0.0",
		"@modelcontextprotocol/sdk": "1.10.2",
		"@tanstack/react-query": "5.74.4",
		"ai": "4.3.9",
		"clipboardy": "4.0.0",
		"dedent": "1.5.3",
		"dotenv": "16.5.0",
		"globby": "14.1.0",
		"ink": "^5.2.0",
		"lodash-es": "4.17.21",
		"meow": "^11.0.0",
		"mime-types": "3.0.1",
		"ollama-ai-provider": "1.2.0",
		"react": "^18.2.0",
		"uuid": "11.1.0",
		"zustand": "5.0.3"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/lodash-es": "4.17.12",
		"@types/mime-types": "2.1.4",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"tsx": "4.19.3",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
